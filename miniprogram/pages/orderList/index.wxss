/* pages/orderList/index.wxss */
.container {
	height: 100%;
}

.container .kefu-btn,
.kefu-btn image {
	width: 40rpx;
	height: 40rpx;
	border: none;
	padding: 0;
	line-height: 40rpx;
}

.body-box {
	width: 100%;
	height: 100%;
}

.info-one-box {
	width: 90%;
	height: 350rpx;
	margin: 10rpx auto;
	border-radius: 20rpx;
	box-shadow: 0 0 10rpx #cccccc;
	background-color: #ffffff;
	padding-left: 20rpx;
	padding-right: 20rpx;
}

.info-one-box .shop-box {
	width: 100%;
	height: 100rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
}

.info-one-box .shop-box .shop-img {
	height: 80rpx;
}

.info-one-box .shop-box .shop-name {
	margin-left: 30rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.info-one-box .shop-box .order-status {
	margin-left: auto;
	color: #999999;
}

.info-one-box .goods-info {
	display: flex;
	flex-direction: row;
	width: 100%;
	margin-top: 10rpx;
	white-space: nowrap;
}

.info-one-box .goods-info scroll-view {
	width: 85%;
	height: 160rpx;
}

.info-one-box .goods-info .good-info {
	width: 150rpx;
	display: inline-block
}

.info-one-box .goods-info .dish-img {
	height: 100rpx;
	width: 100rpx;
	border-radius: 10rpx;
}

.info-one-box .goods-info .dish-name {
	width: 150rpx;
	font-size: 25rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.info-one-box .goods-info .price-info {
	display: flex;
	box-sizing: border-box;
	flex-direction: column;
	justify-content: center;
}
.info-one-box .goods-info .price-info .price {
	color: #000;
	font-weight: bolder;
	text-align: end;
}
.info-one-box .goods-info .price-info .dish-count {
	color: #aaaaaa;
	font-size: 20rpx;
	text-align: end;
}

.info-one-box .btn-box{
	width: 100%;
	display: flex;
}
.info-one-box .btn-box button {
	margin-left: auto;
	margin-right: 0;
	font-size: 20rpx;
}

/* comment */
.toast-box {
    width: 100%;
    height: 100%;
    opacity: 1;
    position: fixed;
    top: 0px;
    left: 0px;
}
 
 
.toastbg {
    opacity: 0.2;
    background-color: black;
    position: absolute;
    width: 100%;
    min-height: 100vh;
}
 
.showToast {
    position: absolute;
    opacity: 1;
    width: 70%;
    margin-left: 15%;
    margin-top: 40%;
}
 
.toast-title {
    padding-left: 5%;
    background-color: #fed360;
    color: white;
    padding-top: 2vh;
    padding-bottom: 2vh;
    border-top-right-radius: 16rpx;
	border-top-left-radius: 16rpx;
	text-align: center;
}
 
.toast-main {
    padding-top: 2vh;
    padding-bottom: 2vh;
    background-color: white;
}
 
.toast-input {
    margin-left: 5%;
    margin-right: 5%;
	border: 1rpx solid #ddd;
	border-radius: 16rpx;
	padding: 20rpx;
	width: 80%;
	height: 300rpx;
}

.toast-input textarea {
	width: 100%;
	height: 100%;
}
 
.toast-button {
    display: flex;
}
 
.button1 {
    width: 50%;
}
 
.button2 {
    width: 50%;
}
 
.button1 button {
    width: 100%;
    background-color: white;
    color: red;
    border-radius: 0px;
    border-bottom-left-radius: 16rpx;
}
 
.button2 button{
    width: 100%;
