/**index.wxss**/

page {
  padding-top: 54rpx;
  background-color: #f6f6f6;
  padding-bottom: 60rpx;
}

/* pages/list/list.wxss */
.page-header {
  display: flex;
  justify-content: center;
  border-bottom: 1rpx solid #ccc;
}
.page-title {
  padding: 20rpx 40rpx;
  color: #999;
  font-size: 38rpx;
  text-align: center;
}
.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
  width: 100%;
}
.item {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  cursor: pointer;
}

.item:after{
  flex: auto;
}

.item .poster {
  width: 150rpx;
  height: 150rpx;
  min-width: 150rpx;
  min-height: 150rpx;
  margin-right: 15rpx;
}
.item .meta {
  flex: 1;
  width: 90%;
  align-self: start;
}
.item .meta .title{
  display: block;
  margin-bottom:5rpx;
}
.item .meta .title{
  font-size:25rpx;
  text-overflow: ellipsis;
  line-clamp: 1;
  white-space: nowrap;
  overflow: hidden;
}

.item .meta .good-feature, .item .meta .sale-box {
  line-height: 25rpx;
  font-size: 22rpx;
  color: #c0c0c0;
}

.item .meta view  {
  margin-bottom: 10rpx;
}

.item .meta .activities {
  display: inline-block;
  font-size: 15rpx;
  color: #f74c31;
  border: #f74c31 0.05rpx solid;
  padding: 5rpx;
  border-radius: 10%;
  margin-right: 5rpx;
}
.item .rating {
  font-size: 25rpx;
  font-weight: bold;
  color: #f74c31;
  margin-right: 10px;
}

.item .meta .good-feature block{
  margin-right: 10px;
}

.item .meta .add{
  width: 50rpx;
  height: 50rpx;
  background-color: #f74c31;
  float: right;
}